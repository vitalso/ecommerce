// Login popup
#login-popup.white-popup.mfp-hide
  .d-flex.align-items-center
    .left-side-form
      h3.fw-normal Вхід

      form#login-form.login-form
        .form-row.mb-4
          input(type="text" , name="login" , placeholder="Ел. пошта або телефон" , required)
          svg
            use(xlink:href="images/sprite.svg#icon-warning")

        .form-row.mb-2.position-relative
          input(type="password" , name="password" , placeholder="Пароль" , required)
          a(href="#").form-show-password
            svg
              use(xlink:href="images/sprite.svg#icon-password")

        .form-row.d-flex.justify-content-between.align-items-center
          label(for="member").d-flex
            input(type="checkbox")#member.d-none
            span
            |Запам’ятати мене

          a(href="#").font-weight-500 Нагадати пароль

        button(type="submit").my-5 Увійти

        p.text-center
          a(href="#signup-popup").open-popup.font-weight-500 Зареєструватися

    .right-side-form
      p.text-center Увійти як користувач

      a(href="#").bg-white.border.btn.rounded-pill.text-center.w-100.mb-4
        svg
          use(xlink:href="images/sprite.svg#icon-facebook")
        span.ms-2 Facebook

      a(href="#").bg-white.border.btn.rounded-pill.text-center.w-100
        svg
          use(xlink:href="images/sprite.svg#icon-google-plus")
        span.ms-2 Google

// Signup popup
#signup-popup.white-popup.mfp-hide
  .d-flex.align-items-center
    .left-side-form
      h3.fw-normal Реєстрація

      form#signup-form.login-form
        .form-row.mb-4
          input(type="text" , name="name" , placeholder="І’мя" , required)
          svg
            use(xlink:href="images/sprite.svg#icon-warning")

        .form-row.mb-4
          input(type="text" , name="surname" , placeholder="Прізвище" , required)
          svg
            use(xlink:href="images/sprite.svg#icon-warning")

        .form-row.mb-4
          input(type="text" , name="phone" , placeholder="Номер телефону" , required)
          svg
            use(xlink:href="images/sprite.svg#icon-warning")

        .form-row.mb-4
          input(type="text" , name="email" , placeholder="Ел.пошта" , required)
          svg
            use(xlink:href="images/sprite.svg#icon-warning")

        .form-row.mb-2
          input(type="password" , name="password" , placeholder="Придумайте пароль" , required)
          svg
            use(xlink:href="images/sprite.svg#icon-warning")
          a(href="#").form-show-password
            svg
              use(xlink:href="images/sprite.svg#icon-password")

        p.mb-5.ps-3.font-size-13 Пароль повинен складатися з не менш ніж 6 символів, містити цифри та латинські літери, у тому числі великі, і не повинен збігатися з ім'ям та ел. поштою

        p.ps-3.font-size-13 Реєструючись, ви погоджуєтеся з <a href="#">угодою користувача</a>

        button(type="submit").mb-5 Увійти

        p.text-center
          a(href="#login-popup").open-popup.font-weight-500 Я вже зареєстрований

    .right-side-form
      p.text-center Увійти як користувач

      a(href="#").bg-white.border.btn.rounded-pill.text-center.w-100.mb-4
        svg
          use(xlink:href="images/sprite.svg#icon-facebook")
        span.ms-2 Facebook

      a(href="#").bg-white.border.btn.rounded-pill.text-center.w-100
        svg
          use(xlink:href="images/sprite.svg#icon-google-plus")
        span.ms-2 Google
